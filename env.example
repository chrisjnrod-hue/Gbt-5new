# Bybit v5 REST base
BYBIT_REST_BASE=https://api.bybit.com

# Telegram (DO NOT commit real tokens)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Storage backend: sqlite (single-instance dev) or redis (for later migration)
STORE=sqlite
SQLITE_DB_PATH=data.db
REDIS_URL=redis://localhost:6379/0

# Cron/heartbeat secret (optional). If set, cron service must include header X-Cron-Secret with this value.
CRON_SECRET=your_cron_secret_here

# Rate limiter for Bybit REST
REST_MAX_TOKENS=500
REST_REFILL_SECONDS=7

# MACD params (standard)
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# Retention and storage tuning
MAX_CANDLES=100             # per symbol per tf (for eager TFs: 1d,4h,1h)
LAZY_TF_MAX_CANDLES=300     # per symbol per tf if lazily stored (5m/15m while signal active)
LAZY_TFS=5,15               # comma separated list of high-frequency TFs stored lazily when needed

# Backfill and startup behavior
BACKFILL_TFS=1440,240,60    # which TFs to backfill eagerly on startup
BACKFILL_LIMIT=200          # number of candles to fetch for backfill
BACKFILL_MINUTES=180        # re-check window on wake (minutes)

# Scheduler tuning
BATCH_SIZE=40
TRIM_INTERVAL_MINUTES=60    # run trim job every hour

# App port (Render sets PORT automatically)
PORT=8000
